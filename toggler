//toggle button with example of a bulb

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body style="text-align: center;">
    <img src="./pic_bulboff.gif" alt="" id="my_image">
    <br>
    <button id="bulb_off" onclick="off()">off</button>
    <button id="bulb_on" onclick="on()">on</button>

    <script>
        function off()
        {
            document.getElementById('my_image').src='pic_bulboff.gif';
        }
        function on()
        {
            document.getElementById('my_image').src='pic_bulbon.gif';
        }
    </script>
    
</body>
</html>
